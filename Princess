<script>
function flip(from,to){
    document.getElementById(from).classList.remove('show');
    document.getElementById(to).classList.add('show');
}

function openPage2(){ flip('page1','page2'); }

function openPage3(){
    flip('page2','page3');
    setTimeout(()=>{
        document.getElementById('after5').innerHTML =
        `<p style='margin-top:20px;'>Dhappaaa!! Jk<br>Tu toh meri pyaari dost hai yaar</p>
        <button class='btn' onclick='openPage4a()'>Pasand aaya!!</button>
        <button class='btn' onclick='openPage4b()'>Pasand nahi aaya !!</button>`;
    },5000);
}

function openPage4a(){ flip('page3','page4a'); }

function openPage4b(){
    flip('page3','page4b');
    setTimeout(()=>{
        document.getElementById('page4b').style.transition='1s';
        document.getElementById('page4b').style.opacity='0';
    },3000);
}
</script>

